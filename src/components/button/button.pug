//- invert (bool) - прозрачная кнопка
//- element - указываем блок внутри которого находится кнопка
//- submit (bool) - тип кнопки submit
//- tabindex - (bool) - аргумент button
//- text - текст внутри кнопки (default - Button)
//- addClass - дополнительные классы (вводятся полностью) - первый без пробела
mixin button(options)
    if !options
        - var options = {}
    -
        var classes = ''
        classes += options.element ? ' ' + options.element + '__button': ''
        classes += options.invert ? ' button_inverted' : ''
        classes += options.addClass ? ' ' + options.addClass : ''
    .button(class=classes)
        button.button__element(
            type = options.submit ? 'submit' : false,
            tabindex = options.tabindex || false
        )= options.text || 'Button'

+button({invert : 0, element: 'footer', submit: true, addClass: 'button_arrow'})